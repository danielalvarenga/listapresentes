<%= simple_form_for(@mensagem) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :aprovada, label: "Aprovar mensagem e exibir na lista", as: :boolean, input_html: {value: "0"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
